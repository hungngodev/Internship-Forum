<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Internship</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/internships/<%=internship._id%>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="internship[title]"
                    value="<%=internship.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="internship[location]"
                    value="<%=internship.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="area">Area of work</label>
                <input class="form-control" type="text" id="area" name="internship[area]"
                    value="<%=internship.area %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="company">Company</label>
                <input class="form-control" type="text" id="company" name="internship[company]"
                    value="<%=internship.company %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label" for="salary">Internship Salary</label>
                <div class="input-group">
                    <span class="input-group-text" id="salary-label">$/hr</span>
                    <input type="text" class="form-control" id="salary" placeholder="0.00" aria-label="salary"
                        aria-describedby="salary-label" name="internship[salary]" value="<%=internship.salary %>"
                        required>\<div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="internship[description]"
                    required><%= internship.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="link">Link to the internship</label>
                <input class="form-control" type="text" id="link" name="internship[link]"
                    value="<%=internship.link %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>


            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Add more image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">

                <% internship.images.forEach(function(img, i) {  %>

                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
                <% })%>
                <% internship.imagesURL.forEach(function(img, i) {  %>

                    <img src="<%=img %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="imageURL-<%=i%>" name="deleteImagesURL[]" value="<%=img%>">
                    </div>
                    <label for="imageURL-<%=i%>">Delete?</label>
                    <% })%>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Internship</button>
            </div>
        </form>
        <a href="/internships/<%= internship._id%>">Back To Internship</a>

    </div>
</div>